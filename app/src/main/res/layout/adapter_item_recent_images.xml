<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent" android:layout_height="wrap_content"
             android:padding="@dimen/padding_recent_img_layout">

    <ImageView
            android:id="@+id/imgRecentImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/description_recent_img"
            android:scaleType="center"/>

    <TextView
            android:id="@+id/txtRecentImageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_bottom_recent_img_title"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_recent_img_title"
            android:textStyle="bold"/>

</FrameLayout>